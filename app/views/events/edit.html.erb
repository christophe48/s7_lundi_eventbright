<style>
body
{background-image: url('http://4everstatic.com/images/abstrait/fond-de-couleur-220805.jpg');
   background-repeat: no-repeat;
   background-size:cover;
   background-attachment:fixed;}
</style>

<body>
<center>
    <!-- ... -->
<br/><br/>
<% if @event.errors.any? %>
      <p>Nous n'avons pas réussi à créer l'évênement pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li style="color:red;"><%= message %></li>
        <% end %>
      </ul>
<% end %>

<p> Modifie ton Evenement </p>
    <%= form_tag url_for(action: 'update'), method: "patch" do %>

      <%= label_tag "Titre de l'évênement" %>
      <%= text_field_tag 'title', @event.title %>
      <br /> <br />

      <%= label_tag 'Date' %>
      <%= text_field_tag 'start_date', @event.start_date %>
      <br /> <br />

      <%= label_tag 'Durée' %>
      <%= text_field_tag 'duration', @event.duration %>
      <br /> <br />

      <%= label_tag 'Lieu' %>
      <%= text_field_tag 'location', @event.location %>
      <br /> <br />

      <%= label_tag 'Prix' %>
      <%= text_field_tag 'price', @event.price %>
      <br /> <br />

      <%= label_tag 'description:' %>
      <%= text_area_tag 'description', @event.description %>
      <br /> <br />

      <%= submit_tag "Modifie ton Event" %>

    <% end %>

    <!-- ... -->
</center>
</body>
